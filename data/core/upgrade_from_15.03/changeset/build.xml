		<zipfileset src="${basedir}/lib/OXPRootBase.war" />
		<!-- copia a to OXPHome	-->
				<!--zipfileset dir="${basedir}/lib" 
		 		includes="ClienteLBY.zip,OXP.jar,OXPXLib.jar,*.jnlp,*.0,*.html"
