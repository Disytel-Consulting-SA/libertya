	<!-- Construye OXPApps ear		-->
	<ear 
	    	destfile="${basedir}/lib/OXPApps.ear" 
    		appxml="${basedir}/lib/OXPApps.xml">
		    <!--fileset dir="${basedir}/lib" 	  	
		 includes="OXPApps.war,OXP.jar,OXPSLib.jar"/-->
